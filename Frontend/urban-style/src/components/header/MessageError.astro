---
import { ExclamationCircleIcon } from '@heroicons/react/24/outline'

interface Props {
	errorId: string
}
const { errorId } = Astro.props
---

<span class="text-maroon flex items-center gap-1 opacity-0 transition-opacity duration-300">
	<span class="invisible hidden min-h-6 min-w-6">
		<ExclamationCircleIcon className="size-6" />
	</span>
	<span id={errorId} class="text-pretty font-bold transition-all"></span>
</span>
