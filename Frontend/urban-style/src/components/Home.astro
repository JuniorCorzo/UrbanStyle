---
import { Image } from "astro:assets";
import { fetchProducts } from "../service/product.service";

const products = await fetchProducts();
---

<section class="text-center">
  <h2 class="text-2xl font-bold">Productos</h2>
  <div class="grid-cols-4 p-4 gap-4">
    {
      products.map((product) => (
        <div class="flex flex-col w-60 h-72 border rounded justify-center items-center">
          <Image
            class="aspect-square border m-4 rounded"
            src={product.images[0]}
            alt={product.name}
            width={200}
            height={200}
          />
          <h3>{product.name}</h3>
          <p class="text-right">{product.price}</p>
        </div>
      ))
    }
  </div>
</section>
