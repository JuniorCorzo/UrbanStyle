---
import FormDeleteModal from '@/components/dashboard/react/components/modals/FormDeleteModal'
import { TableItems } from '@/components/dashboard/react/components/table/TableItems'
import Button from '../Button.astro'
import { TableFilters } from './react/components/table/TableFilters'
---

<article class="max-w-10/12 flex h-full w-full flex-col items-center gap-2">
	<div class="flex w-full items-center justify-end gap-2">
		<TableFilters client:idle />
		<div>
			<Button
				id="button_modal"
				size="md"
				class="max-h-10"
				title="Añadir nuevo elemento"
				type="button"
			>
				<span> Añadir </span>
			</Button>
		</div>
	</div>
	<div class="border-border w-full overflow-x-auto rounded border">
		<TableItems client:idle />
		<FormDeleteModal client:only="react" />
	</div>
</article>
