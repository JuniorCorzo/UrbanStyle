---
interface Props {
  Text: string;
  size?: "sm" | "base" | "lg" | "xl" | "2xl" | "3xl" | "4xl" | "5xl";
}

const { Text, size = "4xl" } = Astro.props;

const sizeClasses = {
  sm: "text-sm",
  base: "text-base",
  lg: "text-lg",
  xl: "text-xl",
  "2xl": "text-2xl",
  "3xl": "text-3xl",
  "4xl": "text-4xl",
  "5xl": "text-5xl",
};
---

<h2 class:list={["font-bold text-text", sizeClasses[size]]}>{Text}</h2>
