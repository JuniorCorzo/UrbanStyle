---
interface Props {
  Text: string;
  class?: string;
  size?: "sm" | "base" | "lg" | "xl" | "2xl" | "3xl" | "4xl" | "5xl";
  id?: string;
}

const { Text, id, size = "4xl", class: className = "" } = Astro.props;

const sizeClasses = {
  sm: "text-sm",
  base: "text-base",
  lg: "text-lg",
  xl: "text-xl",
  "2xl": "text-2xl",
  "3xl": "text-3xl",
  "4xl": "text-4xl",
  "5xl": "text-5xl",
};
---

<h2 id={id} class:list={["font-bold text-text", sizeClasses[size], className]}>
  {Text}
</h2>
