---
import { custom } from "astro:schema";

interface Props {
  id?: string;
  size?: "sm" | "md" | "lg" | "custom";
  class?: string;
}

const { id, size = "md", class: className = "", ...props } = Astro.props;
const sizeClasses = {
  sm: "px-3 py-1 text-sm",
  md: "px-4 py-2 text-base",
  lg: "px-6 py-3 text-lg",
  custom: "",
};
---

<button
  id={id}
  class={`${className} bg-accent text-text border border-border hover:custom-ring rounded cursor-pointer ${sizeClasses[size]} `}
  {...props}
>
  <slot />
</button>
