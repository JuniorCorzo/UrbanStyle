---
import Header from '@/components/header/Header.astro'
import { ClientRouter } from 'astro:transitions'
import '@/styles/global.css'
import { ToasterProvider } from '@/components/react/ToasterProvider'
import Footer from '@/sections/Footer.astro'

interface Props {
	title?: string
}

const { title = 'Urban Style' } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<script is:inline src="https://unpkg.com/react-scan/dist/auto.global.js"></script>

		<ClientRouter />
	</head>
	<body class="bg-background flex- flex min-h-screen flex-col overflow-auto">
		<Header />
		<main class="flex flex-grow">
			<slot name="sidebar" />
			<slot />
		</main>
		<slot name="right_sidebar" />
		<ToasterProvider client:load />
		<Footer />
	</body>
</html>
