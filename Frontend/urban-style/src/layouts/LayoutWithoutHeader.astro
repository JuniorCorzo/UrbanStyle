---
import { ClientRouter } from 'astro:transitions'
import '@/styles/global.css'
import { ToasterProvider } from '@/components/react/ToasterProvider'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Astro Basics</title>

		<ClientRouter />
	</head>
	<body class="bg-background flex min-h-dvh flex-col gap-5 overflow-auto">
		<main class="flex-grow">
			<slot />
		</main>
		<ToasterProvider client:load />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
